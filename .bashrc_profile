shopt -s autocd
shopt -s histappend
HISTSIZE=5000
HISTFILESIZE=10000

txtcyn='\e[4;36m'
txtgrn='\e[4;32m'
txtylw='\e[1;33m'
bldblu='\e[1m\e[4;34m'
tc='\e[0m'
brk='\e[1;33m'

LS_COLORS=$LS_COLORS:'di=1;32:fi=0;36:ln=0;97:'
export LS_COLORS

#=====================================================================
#           FUNCTIONS
#=====================================================================

# Function for yazi : https://yazi-rs.github.io/docs/quick-start
function y() {
  local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
  yazi "$@" --cwd-file="$tmp"
  if cwd="$(command cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
    builtin cd -- "$cwd"
  fi
  rm -f -- "$tmp"
}

# Make and cd in directory
function mkcd() {
  mkdir -p $1 && cd $1
}

#=====================================================================
#           ALIASES
#=====================================================================

alias nv='nvim'

